<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forntpage.trip_project.Read_TakePictureFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="#F8A4A4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_RdTakePic_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="檢視景點"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_RdTakePic_Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="名稱："
                android:textSize="24sp" />

            <EditText
                android:id="@+id/et_RdTakePic_Title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#92A5EF7C"
                android:ems="10"
                android:hint="專案名稱"
                android:inputType="textPersonName"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="描述："
                android:textSize="24sp" />

            <EditText
                android:id="@+id/et_RdTakePic_Des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E8B9B9"
                android:ems="10"
                android:hint="描述文字"
                android:inputType="textMultiLine|textPersonName"
                android:lines="2"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="作者："
                android:textSize="24sp" />

            <EditText
                android:id="@+id/et_RdTakePic_WriteName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#92B3ECF6"
                android:ems="10"
                android:hint="上傳者名稱"
                android:inputType="textPersonName"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_RdAtt_Pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_RdTakePic_Datetime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#F9D07E"
                android:gravity="center|right"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                tools:text="aaaaa" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>