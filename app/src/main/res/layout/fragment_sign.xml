<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_project.SignFragment">

    <TextView
        android:id="@+id/tv_Sign_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="註冊會員"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Sign_Name"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginEnd="32dp"
        android:text="姓名："
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_Sign_Name"
        app:layout_constraintEnd_toStartOf="@+id/et_Sign_Name"
        app:layout_constraintTop_toTopOf="@+id/et_Sign_Name" />

    <EditText
        android:id="@+id/et_Sign_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="請輸入您的姓名"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Sign_Title" />

    <TextView
        android:id="@+id/tv_Sign_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="電子郵件："
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_Sign_Email"
        app:layout_constraintEnd_toStartOf="@+id/et_Sign_Email"
        app:layout_constraintTop_toTopOf="@+id/et_Sign_Email" />

    <EditText
        android:id="@+id/et_Sign_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="請輸入您的E-Mail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/et_Sign_Phone"
        app:layout_constraintStart_toStartOf="@+id/et_Sign_Phone"
        app:layout_constraintTop_toBottomOf="@+id/et_Sign_Phone" />

    <TextView
        android:id="@+id/tv_Sign_Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="手機號碼："
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_Sign_Phone"
        app:layout_constraintEnd_toStartOf="@+id/et_Sign_Phone"
        app:layout_constraintTop_toTopOf="@+id/et_Sign_Phone" />

    <EditText
        android:id="@+id/et_Sign_Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="請輸入您的手機號碼"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/et_Sign_Name"
        app:layout_constraintStart_toStartOf="@+id/et_Sign_Name"
        app:layout_constraintTop_toBottomOf="@+id/et_Sign_Name" />

    <EditText
        android:id="@+id/et_Sign_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/et_Sign_Email"
        app:layout_constraintStart_toStartOf="@+id/et_Sign_Email"
        app:layout_constraintTop_toBottomOf="@+id/et_Sign_Email" />

    <TextView
        android:id="@+id/tv_Sign_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="密碼："
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_Sign_Password"
        app:layout_constraintEnd_toStartOf="@+id/et_Sign_Password"
        app:layout_constraintTop_toTopOf="@+id/et_Sign_Password" />

    <Button
        android:id="@+id/bt_Sign_Ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="註冊"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Sign_Password" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="549dp" />

</androidx.constraintlayout.widget.ConstraintLayout>